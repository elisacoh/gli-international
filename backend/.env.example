# Application
APP_NAME="GLI International API"
APP_VERSION="0.1.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Bank of Georgia API (Future Payment Integration)
BOG_CLIENT_ID=your-bog-client-id
BOG_CLIENT_SECRET=your-bog-client-secret
BOG_API_URL=https://api.bog.ge
BOG_OAUTH_URL=https://oauth.bog.ge/oauth2/token
BOG_MERCHANT_ID=your-merchant-id
BOG_CALLBACK_URL=https://yourdomain.com/api/v1/payments/callback

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,mp4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
